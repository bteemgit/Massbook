<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transaction_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.mpassbook.TransactionDetails">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/text_size"
                android:foregroundGravity="center"
                android:src="@drawable/arrow2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_size"
                android:layout_marginStart="@dimen/text_size"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:id="@+id/actype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Transaction details"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_1"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_size"
                android:background="@drawable/gab" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/headerpin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_padding"
                android:background="#fcfbf7"
                android:gravity="bottom"
                android:paddingEnd="@dimen/text_size"

                android:paddingStart="@dimen/text_size">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:text="Chande Pin"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="#e9dada"/>
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/text_size_1"

                android:paddingEnd="@dimen/text_size"
                android:paddingStart="@dimen/text_size">

                <TextView
                    android:id="@+id/transactionTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"

                    android:text="Change Pin"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />

                <TextView
                    android:id="@+id/changepin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:drawableEnd="@drawable/arrow"

                    android:gravity="center_vertical"
                    android:text="Change the security code used to lock
access to your account            "
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9dada"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/header_padding"
                android:background="#fcfbf7"
                android:gravity="bottom"
                android:paddingEnd="@dimen/text_size"

                android:paddingStart="@dimen/text_size">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:text="Terms &amp; Conditions"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9dada"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/text_size_1"

                android:paddingEnd="@dimen/text_size"
                android:paddingStart="@dimen/text_size">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:drawableEnd="@drawable/arrow"
                    android:gravity="center_vertical"
                    android:text="Terms &amp; Conditions"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9dada"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/header_padding"
                android:background="#fcfbf7"
                android:gravity="bottom"
                android:paddingEnd="@dimen/text_size"

                android:paddingStart="@dimen/text_size">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:text="FAQ"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9dada"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/text_size_1"

                android:paddingEnd="@dimen/text_size"
                android:paddingStart="@dimen/text_size">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:drawableEnd="@drawable/arrow"
                    android:gravity="center_vertical"
                    android:text="FAQ"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9dada"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/header_padding"
                android:background="#fcfbf7"
                android:gravity="bottom"
                android:paddingEnd="@dimen/text_size"

                android:paddingStart="@dimen/text_size">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:text="Settings"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9dada"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical"


              >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/text_size_1"
                    android:orientation="horizontal">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"

                    android:text="Sync on start"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />

                <Switch
                    android:id="@+id/simpleSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e9dada"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/text_size_1"
                    android:text="Sync on period"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e9dada"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/text_size_1"
                    android:text="Sync on period"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#e9dada"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="@dimen/text_size_1"
                    android:text="Sync on period"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size_1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
