<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/text_size"
                android:foregroundGravity="center"
                android:src="@drawable/menu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_size"
                android:layout_marginStart="@dimen/text_size"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:id="@+id/actype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"

                    android:text="Account details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_1"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_size"
                android:background="@drawable/gab" />

        </LinearLayout>


    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/web_size"
        android:gravity="center_vertical"
        android:orientation="vertical"

        >


        <ImageView
            android:id="@+id/imageViewCustomer"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/profileicon"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Customer Name"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_1"

            />

    </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AC NO:  "

                android:gravity="end|center"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/web_size_1"
        >



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/textview_border_dark"
                android:gravity="center">

                <TextView
                    android:id="@+id/acno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="2dp"
                    android:drawableEnd="@drawable/v_small"
                    android:drawableTint="#000"
                    android:fontFamily="sans-serif-black"
                    android:ems="6"
                    android:gravity="center"
                    android:text="xxxxxxxxxxx"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible">

                </Spinner>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Type"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_actype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="savings"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center|center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Account Balance"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_acbalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Savings"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Account Open Date"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_acopendate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Savings"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Account Created Date"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_accreateddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Savings"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Account Status"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_acstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Savings"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Branch"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_acbranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="kenya"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="IFSC"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_acifsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Savings"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>






    </LinearLayout>

</LinearLayout>

</LinearLayout>