<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_transaction_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.admin.mpassbook.TransactionDetails">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/liback"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img_drawer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/web_size_1"
                    android:layout_marginStart="@dimen/text_size"
                    android:foregroundGravity="center"
                    android:src="@drawable/arrow2" />
            </LinearLayout>

          <!--  <ImageView
                android:id="@+id/img_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/text_size"
                android:foregroundGravity="center"
                android:src="@drawable/arrow2" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_size"
                android:layout_marginStart="@dimen/text_size"
                android:layout_weight="1"
                android:gravity="center">


                <TextView
                    android:id="@+id/actype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Transaction details"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_size_1"
                    android:textStyle="bold" />


            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_size"
                android:background="@drawable/gab" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/limiddle"

        android:layout_below="@+id/appbar"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Transaction Amount"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/totalbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rs126"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_1"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date and Time"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/transactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rs126"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Transaction ID"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/transactionid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rs126"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Transaction Description"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/tv_TransactionDescr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rs126"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Account"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/accountno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rs126"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Closing Balance"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/closingbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Rs126"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size" />


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/fabExpense"
            android:padding="30dp"
            android:src="@drawable/ic_miscellaneous"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="end|bottom"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/limiddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#e9edf0"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/web_size"
        android:paddingEnd="@dimen/header_padding"
        android:paddingStart="@dimen/header_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add a comment" />

        <EditText
            android:id="@+id/edit_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/web_size_1"
            android:layout_marginTop="@dimen/web_size_1"
            android:background="@drawable/textview_border_dark"
            android:ems="5"
            android:gravity="top"
            android:inputType="textMultiLine"

            android:maxLength="200"
            android:minHeight="15dp"
            android:minLines="1"
            android:padding="@dimen/web_size_1"
            android:paddingStart="10dp"
            android:paddingTop="2dp"

            android:textColor="#000000"

            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/web_size"
            android:background="@color/colorPrimary"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </LinearLayout>

</RelativeLayout>
