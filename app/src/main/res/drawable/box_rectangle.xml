<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <!-- PinEntryEditText has error set -->
    <item android:state_active="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/colorAccent" />
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/colorPrimary" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <!--Space is the next space for character input -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/colorPrimary" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- PinEntryEditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="#CCCCCC" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

</selector>